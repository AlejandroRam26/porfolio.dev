---
const { href, class: className } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class={`inline-flex items-center px-4 py-2 text-sm font-medium
              rounded-lg border-2
              focus:z-10 focus:ring-4 focus:outline-none
              bg-gray-900/50 text-gray-400 border-gray-300 hover:text-white hover:bg-blue-700 hover:border-blue-950  focus:ring-gray-700 transition
            ${className}`}
>
  <slot />
</a>
