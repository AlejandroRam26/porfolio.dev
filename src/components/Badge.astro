---
interface props {
    aviable_work : boolean
}
const {aviable_work } = Astro.props;
const color = aviable_work ? `bg-blue-100 text-blue-800
    dark:bg-blue-900 dark:text-blue-300` : `bg-red-100 text-red-800
    dark:bg-red-900 dark:text-red-300`;
---
<span 
    class={`text-xs font-medium me-2 px-2.5 py-0.5 rounded
    ${color}`}>
    {aviable_work ? 'Disponible para Trabajar' : 'No disponible para Trabajar'}
</span>